<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.forum.dao.IProductDAO">
	<resultMap id="product_DB_Result" type="product">
		<result column="code" property="code" />
		<result column="name" property="name" />
		<result column="kind" property="kind" />
		<result column="pic" property="pic" />
		<result column="description" property="description" />
		<result column="status" property="status" />
		<result column="price" property="price" />
		<result column="site_code" property="siteCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="name != null and name != '' ">
				AND t.name like "%"#{name}"%"
			</if>
			<if test="kind != null and kind != '' ">
				AND t.kind = #{kind}
			</if>
			<choose>
				 <when test="status == '02'">
				  AND (t.status = 0 or t.status = 2)
				 </when>
				 <when test="status != null and status != '' ">
				  AND t.status = #{status}
				 </when>
				 <otherwise>
				  AND 1 = 1
				 </otherwise>
			</choose>
		</trim>
	</sql>
	<select id="select_product" parameterType="product" resultMap="product_DB_Result">
		SELECT
		t.code
		,t.name
		,t.kind
		,t.pic
		,t.description
		,t.status
		,t.price
		,t.site_code
		FROM
		tforum_product t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_product_count" parameterType="product"
		resultType="java.lang.Long">
		SELECT count(1) FROM tforum_product t
		<include refid="where_condition" />
	</select>

	<insert id="insert_product" parameterType="product">
		INSERT INTO
		tforum_product(
		code
		,name
		,kind
		,pic
		,description
		,status
		,price
		,site_code
		)
		VALUES(
		#{code}
		,#{name}
		,#{kind}
		,#{pic}
		,#{description}
		,#{status}
		,#{price}
		,#{siteCode}
		)
	</insert>

	<update id="update_product" parameterType="product">
		UPDATE tforum_product
		SET
		name = #{name}
		,kind = #{kind}
		,pic = #{pic}
		,description = #{description}
		,price = #{price}
		,site_code = #{siteCode}
		WHERE code = #{code}
	</update>
	
	<update id="update_product_status" parameterType="product">
		UPDATE tforum_product
		SET
		status = #{status}
		WHERE code = #{code}
	</update>

	<delete id="delete_product" parameterType="product">
		DELETE FROM
		tforum_product
		WHERE
		code = #{code}
	</delete>
</mapper>